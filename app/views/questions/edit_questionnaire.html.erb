<h2>Questions for task: <%= @review_task.title%> </h2>
<%#= render 'form', question: @questions %>

<h5>Nomination Questions</h5>
<table class="table table-bordered">
  <thead class="thead-dark">
  <tr>
    <th>Serial No.</th>
    <th>Question</th>
  </tr>
  </thead>

  <tbody>
  <% questions = @questions.select{|x| x.type == 'nomination'}%>
  <% questions.each_with_index do | question, index | %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= question.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

