<h1>StudentTasks#list</h1>

<table>

  <thead>
  <tr>
    <th>Course title</th>
    <th>Task type</th>
    <th>Task title</th>
    <th>Due at</th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%=course.title %></td>
    </tr>
    <%course.tasks.each do |task| %>
      <tr>
        <td>
        </td>
        <td>
          <%=task.title %>
        </td>
        <td>
          <%=task.type %>
        </td>
        <td>
          <%=task.ends_at %>
        </td>
      <tr>
    <% end %>
  <% end %>
  </tbody>
</table>