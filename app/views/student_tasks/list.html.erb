<h1>StudentTasks#list</h1>

<table>

  <thead>
  <tr>
    <th>Course title</th>
    <th>Task type</th>
    <th>Task title</th>
    <th>Due at</th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%=course.title %></td>
    </tr>
    <%course.tasks.each do |task| %>
      <tr>
        <td>
        </td>
        <td>
          <%=task.title %>
        </td>
        <td>
          <%=task.type %>
        </td>
        <td>
          <%=task.ends_at %>
        </td>
        <td>
          <% if task.is_a? SubmissionTask %>
            <% if task.team_size>1 %>
              <% actor_for_submission_task = current_user.actor_by_task(task.id, SubmissionTask) %>
              <%= link_to "Your team1", new_actor_path(:task_id =>task.id) if logged_in?(:student) and !actor_for_submission_task %>
              <%= link_to "Your team2", edit_actor_path(actor_for_submission_task) if logged_in?(:student) and current_user.actor_by_task(task.id, SubmissionTask) %>
            <% end %>
            <%= link_to "Your work1", new_artifact_path(:author_actor_id =>actor_for_submission_task.id) if logged_in?(:student) and actor_for_submission_task %>
          <% else %>
            Artifacts to review
            Submit your review
          <% end %>
        </td>
      </tr>
      <tr>
    <% end %>
  <% end %>
  </tbody>
</table>